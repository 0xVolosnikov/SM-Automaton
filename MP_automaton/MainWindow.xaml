<Window x:Class="MP_automaton.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MP_automaton"
        mc:Ignorable="d"
        Title="МП НКА" Height="212.8" Width="525">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="109" Margin="10,53,0,0" VerticalAlignment="Top" Width="498" Padding="0">
            <ScrollViewer Margin="0" Width="498">
                <TextBlock x:Name="textBlock" TextWrapping="Wrap" IsEnabled="False"/>
            </ScrollViewer>
        </Border>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="498" TextChanged="richTextBox_TextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run/>
                </Paragraph>
                <Paragraph>
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
